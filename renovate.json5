{
    "extends": [
        "github>trifork/cheetah-infrastructure-utils-workflows:default.json5"
    ],
    "schedule": [
        "at any time"
     ],
    "hostRules": [
    //For com.trifork.cheetah.processing:cheetah-lib-processing
    {
      "hostType": "maven",
      "matchHost": "https://maven.pkg.github.com/trifork",
      "token": "{{ process.env.GITHUB_MAVEN_PKG_GITHUB_COM_TOKEN }}"
    },
    //For Cheetah.ComponentTest
    {
      "hostType": "nuget",
      "matchHost": "https://nuget.pkg.github.com/trifork"
    }
  ]
}
