{
  "index_patterns": [
    "transformandstore-index_*"
  ],
  "template": {
    "settings": {
      "index.number_of_shards": "1",
      "index.number_of_replicas": "1",
      "index.refresh_interval": "1s"
    },
    "mappings": {
      "properties": {
        "deviceId": {
          "type": "text"
        },
        "value": {
          "type": "double"
        },
        "timestamp": {
          "type": "long"
        },
        "status": {
          "type": "text"
        }
      }
    }
  },
  "composed_of": [],
  "priority": 1
}